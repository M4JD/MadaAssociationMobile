<?xml version="1.0" encoding="utf-8" ?>
<base:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:ConnectCareMobile.Views.Base"
             x:Class="ConnectCareMobile.Views.VerifyPhoneNumberView"
             NavigationPage.HasNavigationBar="False"
             xmlns:controls="clr-namespace:ConnectCareMobile.Controls"
             xmlns:viewmodelbase="clr-namespace:ConnectCareMobile.ViewModels.Base"
             viewmodelbase:ViewModelLocator.AutoWireViewModel="True">
    <ContentView ControlTemplate="{StaticResource BasePagesTemplates}">
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" VerticalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal">
                    <Label 
                    Text="{Binding MaxSteps}" 
                    FontSize="16"
                    HorizontalOptions="Start" 
                    Style="{StaticResource PrimaryPageHeader}" />
                    <Label
                    Text="Verify Number" 
                    HorizontalOptions="Start"
                    FontSize="16"
                    VerticalOptions="End"
                    Style="{StaticResource PrimaryBody}" />

                </StackLayout>
                <controls:CustomTextEntry
                Grid.Row="1"
                Margin="0,5,0,0"
                Text="{Binding Model.OTP.Text}"
                Placeholder="{Binding Model.OTP.Placeholder}"
                IsError="{Binding Model.OTP.IsError}" 
                IsPassword="{Binding Model.OTP.IsPassword}"
                ErrorText="{Binding Model.OTP.ErrorText}"/>
                <Button Text="Verify"
                    Margin="0,15,0,0"
                    Grid.Row="2"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding VerifyOtpCommand}"/>
                <Label
                Margin="0,10"
                HorizontalTextAlignment="Center"
                Grid.Row="3">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Please make sure the primary caregiver of the owner of this account agrees to the following" TextColor="Black"/>
                            <Span Text=" terms and conditions "
                              TextColor="{StaticResource Primary}">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                                </Span.GestureRecognizers>
                            </Span>
                            <Span Text="and " TextColor="Black"/>
                            <Span Text="privacy policy." TextColor="{StaticResource Primary}" >
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            </Grid>
        </ScrollView>
    </ContentView>
</base:BaseView>