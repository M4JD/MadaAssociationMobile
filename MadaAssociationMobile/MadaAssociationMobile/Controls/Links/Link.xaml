<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="LinkComponent"
             x:Class="MadaAssociationMobile.Controls.Link">
    <ContentView.Content>
        <Label
            VerticalOptions="{Binding Source={x:Reference LinkComponent},Path=VerticalOptions}"
            HorizontalOptions="{Binding Source={x:Reference LinkComponent},Path=HorizontalOptions}"
            Style="{StaticResource PrimaryLink}"
            Text="{Binding Source={x:Reference LinkComponent},Path=Text}" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer 
                    Command="{Binding Source={x:Reference LinkComponent},Path=Command}" 
                    CommandParameter="{Binding Source={x:Reference LinkComponent},Path=CommandParameter}"/>
            </Label.GestureRecognizers>
        </Label>
    </ContentView.Content>
</ContentView>