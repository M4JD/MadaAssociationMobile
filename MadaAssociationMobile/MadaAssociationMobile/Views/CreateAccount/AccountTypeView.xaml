<?xml version="1.0" encoding="utf-8" ?>
<base:BaseView 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:MadaAssociationMobile.Views.Base"
    x:Class="MadaAssociationMobile.Views.AccountTypeView"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False"
    xmlns:viewmodelbase="clr-namespace:MadaAssociationMobile.ViewModels.Base"
    viewmodelbase:ViewModelLocator.AutoWireViewModel="True">
    <ContentView ControlTemplate="{StaticResource BasePagesTemplates}">
            <Grid Padding="20,0"
            VerticalOptions="CenterAndExpand" 
            RowDefinitions="Auto,Auto,Auto,Auto">
            <Label 
                Style="{StaticResource PrimaryBody}"
                Text="I want to create an account for:"
                HorizontalOptions="CenterAndExpand" />
            <Button 
                Style="{StaticResource PrimaryButton}"
                Text="Autistic user"
                Grid.Row="1" 
                Command="{Binding AutisticCreateAccountCommand}"/>
            <Button 
                Style="{StaticResource PrimaryButton}"
                Text="A caregiver"
                Grid.Row="2"
                Command="{Binding CreateAccountCommand}"
                />
            <Label 
                Style="{StaticResource PrimaryBody}"
                Grid.Row="4"
                Margin="0,0,0,25"
                HorizontalOptions="CenterAndExpand">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an account?"/>
                        <Span Text=" " />
                        <Span Text="Click here to log in." TextColor="{DynamicResource LinkColor}" >
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LoginCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>
    </ContentView>
</base:BaseView>